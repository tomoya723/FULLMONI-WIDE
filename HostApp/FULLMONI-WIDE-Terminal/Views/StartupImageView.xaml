<UserControl x:Class="FullmoniTerminal.Views.StartupImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="520" d:DesignWidth="450">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- File Selection -->
        <Border Grid.Row="0" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="4" Padding="10" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0" Text="{Binding ImageFilePath}" IsReadOnly="True"
                         Height="24" FontSize="12" Margin="0,0,0,6" VerticalContentAlignment="Center"
                         ToolTip="Selected image file path"/>
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Button Content="Select Image..." Width="90" Height="24" FontSize="11"
                            Style="{DynamicResource SecondaryButton}"
                            Command="{Binding SelectImageCommand}"
                            IsEnabled="{Binding CanSelectImage}"
                            Margin="0,0,4,0"
                            ToolTip="Select a 765x256 pixel BMP image"/>
                    <Button Content="Read from Device" Width="105" Height="24" FontSize="11"
                            Style="{DynamicResource SecondaryButton}"
                            Command="{Binding ReadFromDeviceCommand}"
                            IsEnabled="{Binding CanRead}"
                            Margin="0,0,4,0"
                            ToolTip="Read current boot screen from device"/>
                    <Button Content="Save to PC" Width="70" Height="24" FontSize="11"
                            Style="{DynamicResource SecondaryButton}"
                            Command="{Binding SaveImageCommand}"
                            IsEnabled="{Binding CanSave}"
                            ToolTip="Save loaded image as BMP file"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Image Preview -->
        <Border Grid.Row="1" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="4" Padding="10,6,10,6" Margin="0,0,0,8">
            <StackPanel>
                <TextBlock Text="Preview (765×256)" FontWeight="Bold" FontSize="12" Margin="0,0,0,4"
                           Foreground="{DynamicResource TextBrush}"/>
                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                        Background="#1E1E1E" Height="140" CornerRadius="2">
                    <Grid>
                        <!-- Message when no preview image -->
                        <TextBlock Text="No image selected"
                                   FontSize="12" Foreground="{DynamicResource TextMutedBrush}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding PreviewImage}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- プレビュー画像 -->
                        <Image Source="{Binding PreviewImage}" Stretch="Uniform"
                               Margin="4" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>

        <!-- Log Display -->
        <Border Grid.Row="2" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="4" Padding="10,8,10,8" Margin="0,0,0,8" Height="150">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="Log" FontWeight="Bold" FontSize="12" VerticalAlignment="Center"
                               Foreground="{DynamicResource TextBrush}"/>
                    <Button Content="Clear" Width="60" Height="20" FontSize="12" Margin="10,0,0,0"
                            Style="{DynamicResource OutlineButton}"
                            Command="{Binding ClearLogCommand}"/>
                    <Button Content="Copy" Width="60" Height="20" FontSize="12" Margin="6,0,0,0"
                            Style="{DynamicResource OutlineButton}"
                            Command="{Binding CopyLogCommand}"/>
                </StackPanel>
                <Border BorderThickness="0" Margin="0">
                    <TextBox Text="{Binding Log, Mode=OneWay}"
                             x:Name="LogTextBox"
                             FontSize="11" FontFamily="Consolas"
                             IsReadOnly="True" TextWrapping="NoWrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Hidden"
                             Background="#1E1E1E" Foreground="#DCDCDC"
                             Padding="6"
                             TextChanged="LogTextBox_TextChanged"/>
                </Border>
            </DockPanel>
        </Border>

        <!-- Transfer Progress -->
        <Border Grid.Row="3" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="4" Padding="10" Margin="0,0,0,8">
            <StackPanel>
                <TextBlock Text="Transfer Progress" FontWeight="Bold" FontSize="12" Margin="0,0,0,6"
                           Foreground="{DynamicResource TextBrush}"/>
                <ProgressBar Height="20" Value="{Binding Progress}" Maximum="100" Margin="0,0,0,4"/>
                <TextBlock Text="{Binding StatusMessage}" FontSize="12"
                           Foreground="{DynamicResource TextMutedBrush}"/>
            </StackPanel>
        </Border>

        <!-- Write Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0">
            <Button Content="Start Write" Width="120" Height="32" FontSize="12" Margin="0,0,6,0"
                    Style="{DynamicResource WarningButton}"
                    Command="{Binding WriteImageCommand}"
                    IsEnabled="{Binding CanWrite}"
                    ToolTip="Write boot screen to RX72N flash memory"/>
            <Button Content="Cancel" Width="80" Height="32" FontSize="12"
                    Style="{DynamicResource SecondaryButton}"
                    Command="{Binding CancelCommand}"
                    IsEnabled="{Binding CanCancel}"
                    ToolTip="Cancel write operation"/>
        </StackPanel>
    </Grid>
</UserControl>
